{
  "name": "tntc",
  "description": "Transpiler for the TNT language",
  "version": "0.2.0",
  "author": "Informal Systems",
  "license": "Apache 2.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index",
  "bin": {
    "tntc": "dist/src/cli.js"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "commonjs": true,
      "es2021": true,
      "mocha": true
    },
    "extends": [
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "src/generated/*"
    ],
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-json",
      "eslint-plugin-import",
      "eslint-plugin-node"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ]
    }
  },
  "files": [
    "README.md",
    "dist/**/*",
    "test/**/*.ts"
  ],
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/informalsystems/tnt"
  },
  "dependencies": {
    "@sweet-monads/either": "^3.0.1",
    "@types/line-column": "^1.0.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "eol": "^0.9.1",
    "json-bigint": "^1.0.0",
    "line-column": "^1.0.2",
    "yargs": "^17.2.1"
  },
  "scripts": {
    "compile": "tsc",
    "test": "mocha -r ts-node/register test/*.test.ts test/**/*.test.ts",
    "coverage": "nyc npm run test",
    "integration": "txm cli-tests.md",
    "antlr": "antlr4ts -visitor ./src/generated/Tnt.g4 && antlr4ts -visitor ./src/generated/Effect.g4",
    "format": "eslint --fix '**/*.ts'"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/json-bigint": "^1.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.3"
  }
}
