{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-json",
    "eslint-plugin-import",
    "eslint-plugin-node",
    "unused-imports"
  ],
  "ignorePatterns": [
    "server/.yalc/*"
  ],
  "globals": {
    "NodeJS": true,
    "process": true,
    "__dirname": true
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-use-before-define": "off",
    "array-callback-return": "off",
    "no-return-assign": "off",
    "no-unused-vars": [
      "error",
      {
        "args": "none",
        "varsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_"
      }
    ],
    // Autofix for imports. See https://simondosda.github.io/posts/2021-05-10-eslint-imports.html
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^."
      }
    ],
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ]
  }
}
